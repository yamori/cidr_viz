<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>

    <header>
        <% include ../partials/header %>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-4">
                <form>
                    <div class="form-group">
                        <input id="user_input_account" class="form-control" type="text" placeholder="(account CIDR here, required)">
                    </div>
                    <div class="form-group">
                        <textarea id="user_input_cidr" class="form-control" aria-label="With textarea" rows="5" placeholder="(optional CIDR blocks e.g. VPCs or Subnets)"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" id="blah" class="btn btn-primary">Submit</button>
                        <button type="button" id="insertExamplesButton" class="btn btn-primary" onclick "insertExample();">Insert Example</button>
                        <button type="button" id="clearInputButton" class="btn btn-primary" onclick "insertExample();">Clear</button>
                    </div>
                </form>
            </div>


            <div id="results_div" class="col-8">
                <h4>Account</h4>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">CIDR</th>
                            <th scope="col"># IPs</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>10.82.208.0/20</td>
                            <td>64</td>
                            <td>10.82.208.0/20</td>
                            <td>10.82.208.0/20</td>
                        </tr>
                    </tbody>
                </table>
                <h4>Lowest CIDR Blocking</h4>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">CIDR</th>
                            <th scope="col"># IPs</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>10.82.208.0/20</td>
                            <td>64</td>
                            <td>10.82.208.0/20</td>
                            <td>10.82.208.0/20</td>
                        </tr>
                        <tr>
                            <td>10.82.208.0/20</td>
                            <td>64</td>
                            <td>10.82.208.0/20</td>
                            <td>10.82.208.0/20</td>
                        </tr>
                        <tr>
                            <td>10.82.208.0/20</td>
                            <td>64</td>
                            <td>10.82.208.0/20</td>
                            <td>10.82.208.0/20</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>



    <footer>
        <% include ../partials/footer %>
    </footer>

    <script>
        $(document).ready(function () {
            $("#blah").click(function () {
                userInputAccount = $('#user_input_account').val();
                userInputCIDRBlocks = $('#user_input_cidr').val();
                $.ajax({
                    url: window.location + "do_cidr/",
                    type: "POST",
                    data: JSON.stringify({ userInput: userInputAccount + "\n" + userInputCIDRBlocks }),
                    dataType: "html",
                    contentType: "application/json; charset=utf-8",
                    success: function (response, status, http) {
                        $("#results_div").html(response);
                    },
                    error: function (error) {
                        alert('hmm, something went wrong');
                        // ... something unspecified.
                    }
                });
            });
        });

        // Indices for the following two vars are related.
        var exampleBank_Account = ['10.82.208.0/20',
        '192.168.100.14/24',
        '10.1.0.0/20'];
        var exampleBank_CIDRBlocks = ['10.82.217.128/27\n10.82.219.0/24',
        '',
        '10.1.2.0/24\n10.1.7.0/28'];

        var insertedExampleIndex = -1;
        function insertExample() {
            var newIndex = Math.floor(Math.random() * exampleBank_Account.length);
            while (newIndex == insertedExampleIndex) {
                // Don't display the same example consecutively
                newIndex = Math.floor(Math.random() * exampleBank_Account.length);
            }
            insertedExampleIndex = newIndex;
            $('#user_input_account').val(exampleBank_Account[insertedExampleIndex]);
            $('#user_input_cidr').val(exampleBank_CIDRBlocks[insertedExampleIndex]);
        }
        $('#insertExamplesButton').on('click', function (event) {
            event.preventDefault(); // To prevent following the link (optional)
            insertExample();
        });

        // Clear the input button
        $('#clearInputButton').on('click', function (event) {
            event.preventDefault(); // To prevent following the link (optional)
            $('#user_input_account').val('');
            $('#user_input_cidr').val('');
        });
    </script>

</body>

</html>
